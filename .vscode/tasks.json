{
    "tasks": [
        //Used when you want to run code or test a change to a cpp file. 
        {
            "type": "shell",
            "label": "Run",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        //Used when you want to test a change to an hpp file.
        {
            "type": "shell",
            "label": "Update Headers",
            "command": "g++ -c src/*.cpp -std=c++14 -m64 -g -Wall -I include && g++ *.o -o bin/debug/main -lSDL2main -lSDL2_ttf -lSDL2 -lSDL2_image -lSDL2_mixer && ./bin/debug/main",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        //Used when you want an optimized build and don't care how long it takes
        {
            "type": "shell",
            "label": "Release",
            "command": "g++ -c src/*.cpp -std=c++14 -m64 -O2 -Wall -I include && g++ *.o -o bin/release/main -s -lSDL2main -lSDL2_ttf -lSDL2 -lSDL2_image -lSDL2_mixer && ./bin/release/main",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}